#!/usr/bin/perl
use strict;
use utf8;

use lib qw(lib);
use Latex2Text ':all';

use open IO=> ':encoding(utf8)';
binmode STDIN, ':encoding(utf8)';
binmode STDOUT, ':encoding(utf8)';
binmode STDERR, ':encoding(utf8)';

for my $file (@ARGV) {
	open my $fh, '<', $file or die "can't open $file: $!";

	my $all_sent;
	while (<$fh>) {
		$all_sent .= $_;
	}
	print $all_sent;
	my @sent = &LatexToSentencelist($all_sent);
#	local $" = "\n\@";
#	print @sent;
}
