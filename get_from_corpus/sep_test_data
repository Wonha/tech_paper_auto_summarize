#!/usr/bin/perl -w
use strict;

my ($total, $moved_cnt);
$total = 0;
$moved_cnt = 0;

my @file_path_list = <@ARGV>;
print "input files: ",scalar @file_path_list,"\n";

for my $file_path (@file_path_list) {
	
	my @path_token = split /\//, $file_path;
	my $file_name = pop @path_token;
	
	my @num = split /-|\./, $file_name;

	if($num[1]%3 == 0) {
		system "mv $file_path ./test_data";
		$moved_cnt++;
	}
	$total++;
}

print "moved file total: $moved_cnt\n";
print "remain file: ".($total-$moved_cnt)."\n";

